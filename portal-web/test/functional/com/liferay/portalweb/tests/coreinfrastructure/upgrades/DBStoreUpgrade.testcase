@component-name = "portal-database-upgrade-framework"
definition {

	property custom.properties = "dl.store.impl=com.liferay.portal.store.db.DBStore";
	property portal.release = "true";
	property portal.upgrades = "true";
	property portal.upstream = "true";
	property test.assert.warning.exceptions = "true";
	property testray.main.component.name = "Database Upgrade Framework";

	setUp {
		SignIn.signIn();

		SearchAdministration.executeReindex();
	}

	@priority = 4
	test ViewDBStoreArchive7310 {
		property data.archive.type = "data-archive-db-store";
		property database.types = "mariadb,mysql,oracle,postgresql,sqlserver,sybase";
		property portal.version = "7.3.10";

		ValidateDBStoreUpgrade.viewDBStoreUpgrade();
	}

	@priority = 4
	test ViewDBStoreArchive7413 {
		property data.archive.type = "data-archive-db-store";
		property database.types = "mariadb,mysql,oracle,postgresql,sqlserver";
		property portal.version = "7.4.13";

		ValidateDBStoreUpgrade.viewDBStoreUpgrade();
	}

	@priority = 4
	test ViewDBStoreArchive621021 {
		property data.archive.type = "data-archive-db-store";
		property database.types = "mysql,oracle,postgresql,sqlserver,sybase";
		property portal.version = "6.2.10.21";

		ValidateDBStoreUpgrade.viewDBStoreUpgrade();
	}

}